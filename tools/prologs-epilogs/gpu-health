set -e

#
# Check that all GPUs are healthy via DCGM and check for ECC errors
#
if [ $NUMGPUS -gt 0 ]; then
    echo "Execute DCGM health check and ECC error check for GPUs"
    GPULIST=`nvidia-smi --query-gpu=index --format=csv,noheader | tr '\n' ',' | sed 's/,$//'`
    rm /tmp/dcgm.out 2> /dev/null
    rm /tmp/ecc_errors.out 2> /dev/null

    # Run DCGM checks
    nv-hostengine
    dcgmi group -c gpuinfo
    dcgmi group -g 1 -a $GPULIST
    dcgmi diag -g 1 -r 1 1> /tmp/dcgm.out
    dcgmi group -d 1
    nv-hostengine -t

    # Check for DCGM failures
    grep -i fail /tmp/dcgm.out > /dev/null
    DCGM_FAILED=$?

    # Check for ECC errors (double-bit errors for H100)
    nvidia-smi --query-gpu=index,ecc.errors.double_bit.volatile.total --format=csv,noheader > /tmp/ecc_errors.out
    ECC_ERRORS=$(awk -F', ' '{sum += $2} END {print sum}' /tmp/ecc_errors.out)

    # Check GPU utilization to ensure GPUs are accessible
    GPU_UTIL=$(nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader,nounits | awk '{sum += $1} END {print sum/NR}')

    # Check for NVLink errors
    NVLINK_ERRORS=$(nvidia-smi nvlink -sc 0bz -i 0 | grep -i "Error Count" | awk '{sum += $3} END {print sum}')

    if [ $DCGM_FAILED -eq 0 ] || [ $ECC_ERRORS -gt 0 ] || [ $(echo "$GPU_UTIL < 1" | bc) -eq 1 ] || [ $NVLINK_ERRORS -gt 0 ]; then
        REASON="H100 GPU issues detected: "
        [ $DCGM_FAILED -eq 0 ] && REASON+="DCGM test failed, "
        [ $ECC_ERRORS -gt 0 ] && REASON+="ECC errors found ($ECC_ERRORS double-bit errors), "
        [ $(echo "$GPU_UTIL < 1" | bc) -eq 1 ] && REASON+="GPUs showing zero utilization, "
        [ $NVLINK_ERRORS -gt 0 ] && REASON+="NVLink errors detected ($NVLINK_ERRORS errors), "
        REASON+="see /tmp/dcgm.out and /tmp/ecc_errors.out"

        scontrol update nodename=$HOSTNAME state=drain reason="$REASON"
        exit 0
    fi
fi
